! Various terminal settings {{{
! https://unix.stackexchange.com/questions/81746/how-can-i-get-better-looking-fonts-in-my-terminal-URxvt
!URxvt.font:     xft:bitstream vera sans mono:size=8:antialias=true
!URxvt.boldFont: xft:bitstream vera sans mono:bold:size=8:antialias=true
!URxvt.font:     xft:DejaVu Sans Mono:size=12:antialias=true
!URxvt.boldFont: xft:DejaVu Sans Mono:bold:size=12:antialias=true
URxvt.font:     xft:Hack:regular:size=10:antialias=true
URxvt.boldFont: xft:Hack:bold:size=10:antialias=true
URxvt.loginShell: true
URxvt.scrollBar: false
URxvt.colorMode: on
URxvt.boldColors: on
URxvt.dynamicColors: on
URxvt.colorAttrMode: on
URxvt.urgentOnBell: true

URxvt.perl-ext-common: background,font-size,matcher
! Matcher makes URLs clickable
URxvt.matcher.button: 1
URxvt.font-size.step: 1
URxvt.background.expr: rootalign shade -0.85, root

!! Colors
URxvt.foreground: green
URxvt.background: black
! Black
URxvt.color0: black
! Red
URxvt.color1: red3
! Green
URxvt.color2: green3
! Yellow
URxvt.color3: yellow3
!!Blue
URxvt.color4: rgb:4c/4c/ff
! Magenta
URxvt.color5: magenta
! Cyan
URxvt.color6: cyan3
! White
URxvt.color7: gray90
! Bright black?
URxvt.color8: gray50
! Bright red
URxvt.color9: red
! Bright green
URxvt.color10: green
! Bright yellow
URxvt.color11: yellow
*VT100.color11: yellow
! Bright blue
URxvt.color12: rgb:5c/5c/ff
! Bright magenta
URxvt.color13: magenta
! Bright cyan
URxvt.color14: cyan
! Bright white
URxvt.color15: white
! }}}

! HiDPI and font related settings {{{
! http://vincent.jousse.org/tech/archlinux-retina-hidpi-macbookpro-xmonad/
! https://wiki.archlinux.org/index.php/HiDPI#X_Server
Xft.antialias: true
Xft.rgba:      rgb
Xft.hinting:   true
!Xft.autohint:  0
!Xft.lcdfilter: lcddefault
Xft.hintstyle: hintfull
Xft.dpi:       96
!Xft.dpi:       120
!Xft.dpi:       144
!Xft.dpi:       175
!Xft.dpi:       168
!Xft.dpi:       192
! }}}

rofi.bc: #000000
rofi.terminal: urxvt
rofi.monitor: -1
rofi.ssh-client: mosh
